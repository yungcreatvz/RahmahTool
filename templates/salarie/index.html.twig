{% extends 'dashboardbase.html.twig' %}
{% block title %} Profils des employés {% endblock %}
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        <!-- Custom styles for this template-->
        <link href="\css/sb-admin-2.min.css" rel="stylesheet">

    {% endblock %}

{% block body %}
    <span class="card shadow m-4" >
    <nav class="navbar navbar-expand-lg navbar-light bg-gradient-secondary" style="color: white">
        <a class="navbar-brand ml-2  text-white" href="#"> Liste des Employés > </a>
        <button class="navbar-toggler"  style="background-color: slategrey"
                type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link text-gray-400" href="{{ path('eleve_new') }}"> ajouter un profil <span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>
    </span>


<div class="card shadow m-4">
    <div class="card-body">
        <span> <h2 class="text-secondary mb-3"> Profils Des Employés </h2></span>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Poste</th>
                <th>TypeDeContract</th>
                <th>TelephonePortable</th>
                <th>Email</th>
                <th>AdresseDeResidence</th>
                <th>Matricule</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salarie in salaries %}
            <tr>
                <td>{{ salarie.id }}</td>
                <td>{{ salarie.Prenom }}</td>
                <td>{{ salarie.nom }}</td>
                <td>{{ salarie.Poste }}</td>
                <td>{{ salarie.TypeDeContract }}</td>
                <td>{{ salarie.TelephonePortable }}</td>
                <td>{{ salarie.Email }}</td>
                <td>{{ salarie.AdresseDeResidence }}</td>
                <td>{{ salarie.Matricule }}</td>
                <td>
                    <a href="{{ path('salarie_show', {'id': salarie.id}) }}">show</a>
                    <a href="{{ path('salarie_edit', {'id': salarie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-lg" href="{{ path('salarie_new') }}">Create new</a>
    </div>
</div>
{% endblock %}
