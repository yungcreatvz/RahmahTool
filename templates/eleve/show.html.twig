            </tr>
            <tr>
                <th>PetitFrereOuSoeur</th>
                <td>{{ eleve.PetitFrereOuSoeur }}</td>
            </tr>
            <tr>
                <th>FrereOuSoeur</th>
                <td>{{ eleve.FrereOuSoeur }}</td>
            </tr>
            <tr>
                <th>PreferenceManuel</th>
                <td>{{ eleve.PreferenceManuel }}</td>
            </tr>
            <tr>
                <th>TolerenceParacetamol</th>
                <td>{{ eleve.TolerenceParacetamol }}</td>
            </tr>
            <tr>
                <th>MaladieSignale</th>
                <td>{{ eleve.MaladieSignale }}</td>
            </tr>
            <tr>
                <th>Prénoms du parent</th>
                <td>{{ parent.prenomParent }}</td>
            </tr>
            <tr>
                <th>nom du parent</th>
                <td>{{ parent.nomParent }}</td>
            </tr>

            <tr>
                <th> Secteur D'activité</th>
                <td>{{ parent.SecteurDactivite }}</td>
            </tr>
            <tr>
                <th>Telephone Portable 1 du parent</th>
                <td>{{ parent.TelephonePortable1 }}</td>
            </tr>
            <tr>
                <th>Telephone Portable 2 du parent</th>
                <td>{{ parent.TelephonePortable2 }}</td>
            </tr>
            <tr>
                <th>Telephone Bureau </th>
                <td>{{ parent.TelephoneBureau }}</td>
            </tr>
            <tr>
                <th>Telephone Fixe Maison  </th>
                <td>{{ parent.TelephoneFixeMaison }}</td>
            </tr>

            <tr>
                <th>nom du parent</th>
                <td>{{ parent.nomParent }}</td>
            </tr>
        
        </tbody>
    </table>


    <div class="container">
    <a class="btn btn-primary btn" href="{{ path('eleve_index') }}">back to list</a>

    <a class="btn btn-primary btn" href="{{ path('eleve_edit', {'id': eleve.id}) }}">edit</a>

    {{ include('eleve/_delete_form.html.twig') }}
    </div>

    </div>

</div>
    <div class="card shadow align-items-center bg-gray-400 col-lg-3"  >
        <img class="img-fluid bg-gradient-light mt-4 mb-4" src="https://static.thenounproject.com/png/2861597-200.png">
        <h3 class="text-white"> profil Scolaire </h3>
        <span> Eleve : {{ eleve.prenoms }} {{ eleve.nom }} </span>

        <span> Classe : {{ classe.classe }} </span>
        <table> </br> <tr class="m-2"> Option :</tr>
        {% for eleve in eleve.options %}
            <td class="table table-primary">
                <li > {{ eleve.options }} </li> </td>
        </table>
        {% endfor %}


    </div>
</div>

{% endblock %}
