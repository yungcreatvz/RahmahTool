                <td>{{ eleve.id }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ eleve.Matricule }}</td>
            </tr>
            <tr>
                <th>Prenoms</th>
                <td>{{ eleve.Prenoms }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ eleve.Nom }}</td>
            </tr>
            <tr>
                <th>PaysDeNaissance</th>
                <td>{{ eleve.PaysDeNaissance }}</td>
            </tr>
            <tr>
                <th>LieuDeNaissance</th>
                <td>{{ eleve.LieuDeNaissance }}</td>
            </tr>
            <tr>
